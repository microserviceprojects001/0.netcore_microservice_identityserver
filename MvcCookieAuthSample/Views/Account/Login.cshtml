@model MvcCookieAuthSample.Models.Account.LoginViewModel

<h2>登录</h2>

<form asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="form-group">
        <label asp-for="Input.Email">Email</label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.Password">密码</label>
        <input asp-for="Input.Password" type="password" class="form-control" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">登录</button>
    <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-secondary">注册</a>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" asp-for="Input.RememberLogin">
            <label class="form-check-label" asp-for="Input.RememberLogin">
                Remember My Login
            </label>
        </div>
    </div>

</form>

@if (!ViewContext.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}